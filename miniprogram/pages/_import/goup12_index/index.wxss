.container { padding: 16rpx; position: relative; }
.search { margin-bottom: 16rpx; }
.search-input { display: flex; align-items: center; width: 100%; border: 1px solid #e5e7eb; border-radius: 8rpx; padding: 8rpx 12rpx; box-sizing: border-box; }
.search-icon-btn { width: 36rpx; height: 36rpx; display: flex; align-items: center; justify-content: center; margin-right: 12rpx; }
.search-icon-btn image { width: 28rpx; height: 28rpx; opacity: 0.9; }
.search-input input { flex: 1; font-size: 26rpx; border: none; background: transparent; padding: 16rpx 0; }
.filters { display: flex; gap: 12rpx; margin: 16rpx 0 20rpx; }
.dropdown { position: relative; min-width: 200rpx; }
.dropdown-trigger { display: flex; align-items: center; justify-content: space-between; gap: 8rpx; background: #fff; border: 1px solid #e5e7eb; border-radius: 8rpx; padding: 12rpx 16rpx; color: #374151; box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.04); }
.dropdown-list { position: absolute; left: 0; right: 0; top: calc(100% + 6rpx); background: #fff; border: 1px solid #e5e7eb; border-radius: 8rpx; box-shadow: 0 8rpx 18rpx rgba(0,0,0,0.08); max-height: 320rpx; overflow-y: auto; z-index: 1001; }
.dropdown-item { padding: 16rpx; color: #111827; border-bottom: 1px solid #f3f4f6; }
.dropdown-item:last-child { border-bottom: none; }
.dropdown-item:active { background: #f9fafb; }
.dropdown-mask { position: fixed; left: 0; right: 0; top: 0; bottom: 0; z-index: 1000; background: rgba(0,0,0,0); }
.dropdown-label { color: #374151; font-size: 26rpx; }
.dropdown-icon { width: 24rpx; height: 24rpx; opacity: 0.8; transition: transform 120ms ease; }
.dropdown-icon.open { transform: rotate(180deg); }
.list { display: flex; flex-direction: column; gap: 48rpx; }
.card { display: flex; flex-direction: column; gap: 12rpx; background: #fff; border-radius: 16rpx; box-shadow: 0 8rpx 18rpx rgba(0,0,0,0.08); overflow: hidden; border: 1rpx solid #eef2ff; }
.thumb { width: 100%; height: 340rpx; background: #e2e8f0; }
.info { flex: 1; padding: 12rpx; }
.title { font-weight: 700; color: #111827; white-space: nowrap; text-overflow: ellipsis; overflow: hidden; }
.meta { color: #6b7280; font-size: 24rpx; margin: 6rpx 0; }
.progress { color: #0ea5e9; font-size: 24rpx; }
.empty { text-align: center; color: #6b7280; padding: 40rpx 0; }
/* 设计图叠层样式，仅用于对照，发布时可关闭 designMode */
.design-overlay { position: absolute; left: 0; top: 0; width: 100%; height: auto; z-index: 999; pointer-events: none; }
.design-controls { position: fixed; right: 16rpx; bottom: 120rpx; display: flex; gap: 8rpx; z-index: 1000; }

.title-row { font-family: 'SourceHanSansSC-Regular', 'Source Han Sans SC', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif; font-weight: 400; color: #111827; font-size: 30rpx; padding: 12rpx 12rpx 0; white-space: nowrap; text-overflow: ellipsis; overflow: hidden; }
.meta-row { display: flex; align-items: center; justify-content: space-between; gap: 12rpx; padding: 0 12rpx; color: #6b7280; font-size: 24rpx; }
.meta-left { display: flex; align-items: center; gap: 8rpx; }
.tag { padding: 4rpx 10rpx; border-radius: 10rpx; font-size: 22rpx; }
.tag.top { background: #fde68a; color: #92400e; }
.tag.hot { background: #fecaca; color: #7f1d1d; }
.meta-center { flex: 1; white-space: nowrap; text-overflow: ellipsis; overflow: hidden; text-align: center; }
.meta-right { white-space: nowrap; }
.signup-row { display: flex; align-items: center; justify-content: space-between; padding: 8rpx 12rpx 24rpx; }
.flags { display: flex; align-items: center; gap: 6rpx; }
.flag { width: 36rpx; height: 36rpx; line-height: 36rpx; text-align: center; border-radius: 50%; background: #f3f4f6; font-size: 22rpx; }
.signup-count { color: #0ea5e9; font-size: 24rpx; }
.detail-btn { background: #7c3aed; color: #fff; padding: 8rpx 16rpx; border-radius: 10rpx; font-size: 24rpx; }
.detail-btn:active { opacity: 0.9; }
