.container { padding: 24rpx; position: relative; }
.mine-page {
  padding: 32rpx;
}

.profile {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

/* 新增右侧三行信息布局 */
.info { flex: 1; display: flex; flex-direction: column; }
 .row { display: flex; align-items: center; gap: 12rpx; }
 .label { width: 160rpx; color: #6b7280; }
 .value { flex: 1; color: #111827; font-weight: 500; text-align: left; }
 .mini { background: #f3f4f6; border: 1px solid #e5e7eb; color: #374151; border-radius: 8rpx; }
 .small { color: #111827; font-size: 26rpx; }

.list {
  margin-top: 24rpx;
}

/* 积分卡片容器样式 */
.points-card {
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 160rpx;
  padding: 20rpx;
  border-radius: 16rpx;
  background-color: #1a1a1a;
  color: #fff;
  margin-top: 24rpx;
}
/* 背景图与内容层级设置 */
.points-bg { position: absolute; left: 0; top: 0; width: 100%; height: 100%; z-index: 0; }
.points-left { position: relative; z-index: 1; }
.points-icon { position: relative; z-index: 1; }
.points-left { display: flex; flex-direction: column; gap: 8rpx; }
.points-title { color: #fff; font-size: 28rpx; font-weight: 500; }
.points-value { color: #fff; font-size: 34rpx; font-weight: 600; }
.points-icon { width: 80rpx; height: 80rpx; }
.item-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.item-icon {
  width: 40rpx;
  height: 40rpx;
}

.item-title {
  font-size: 28rpx;
  color: #111827;
}

.item-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.item-arrow {
  width: 24rpx;
  height: 24rpx;
}
.name { font-weight: 600; font-size: 32rpx; }
.tags { color: #6b7280; }
.auth { margin-left: auto; display: flex; gap: 8rpx; }
.primary { background: #07c160; color: #fff; border-radius: 12rpx; }
.outline { background: #fff; border: 1px solid #ddd; color: #333; border-radius: 12rpx; }
.list .nav-item { display: flex; align-items: center; gap: 12rpx; padding: 18rpx 16rpx; background: #fff; border-radius: 12rpx; margin-bottom: 16rpx; box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.06); }
.nav-icon { width: 40rpx; height: 40rpx; }
.nav-text { flex: 1; font-weight: 500; }
.nav-arrow { width: 24rpx; height: 24rpx; opacity: 0.6; }
.auth-tip { margin-top: 16rpx; color: #666; text-align: center; }
.row + .row { margin-top: 8rpx; }
.row.compact { margin-top: 0; }