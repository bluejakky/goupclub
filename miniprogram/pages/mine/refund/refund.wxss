.page { padding: 16rpx; }
.list {}
.notice { background: #fffbe6; border: 1px solid #ffe58f; border-radius: 8rpx; padding: 12rpx; margin: 16rpx 0; color: #8c6d1f; font-size: 26rpx; }
.card { background: #fff; border-radius: 12rpx; margin-bottom: 16rpx; padding: 16rpx; box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.05); }
.title { font-size: 30rpx; font-weight: 600; margin-bottom: 8rpx; }
.row { display: flex; justify-content: space-between; margin: 6rpx 0; }
.label { color: #666; }
.value { color: #333; }
.value.ok { color: #07c160; }
.value.fail { color: #ff4d4f; }
.value.pending { color: #faad14; }
.actions { margin-top: 12rpx; display: flex; gap: 12rpx; }
.outline { border: 1px solid #ddd; background: #fff; }
.link { background: #f5f5f5; }