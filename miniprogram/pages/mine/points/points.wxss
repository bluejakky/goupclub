.page { padding: 16rpx 24rpx 120rpx; }
.summary { display: flex; gap: 16rpx; margin-bottom: 16rpx; }
.card { flex: 1; background: #fff; border-radius: 12rpx; padding: 16rpx; box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.06); }
.card .label { color: #6b7280; font-size: 26rpx; }
.card .value { margin-top: 6rpx; font-size: 36rpx; font-weight: 600; }
.value.income { color: #16a34a; }
.value.expense { color: #dc2626; }

.filters { background: #fff; border-radius: 12rpx; padding: 16rpx; box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.06); margin-bottom: 16rpx; }
.filter { display: flex; align-items: center; gap: 12rpx; margin-bottom: 12rpx; }
.filter-label { width: 120rpx; color: #6b7280; }
.radio-group { display: flex; gap: 16rpx; flex-wrap: wrap; }
.radio-item { display: flex; align-items: center; gap: 8rpx; }
.type-group .radio-item { width: 48%; }
.type-group .radio-item:nth-child(odd) { padding-left: 0; }
.direction-group .radio-item { width: 48%; }

.list { background: #fff; border-radius: 12rpx; padding: 8rpx; box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.06); }
.item { display: flex; align-items: center; justify-content: space-between; padding: 14rpx 10rpx; border-bottom: 1px solid #f3f4f6; }
.item:last-child { border-bottom: none; }
.left { display: flex; flex-direction: column; gap: 4rpx; }
.type { font-size: 28rpx; font-weight: 500; color: #111827; }
.meta { color: #6b7280; font-size: 24rpx; }
.time { color: #6b7280; font-size: 24rpx; }
.right { display: flex; align-items: center; }
.amount { font-size: 32rpx; font-weight: 600; }
.amount.income { color: #16a34a; }
.amount.expense { color: #dc2626; }
.empty { text-align: center; color: #6b7280; padding: 24rpx; }