.page { padding: 16rpx; }
.summary { background: #fff; border-radius: 12rpx; padding: 16rpx; box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.05); display:flex; justify-content: space-between; align-items: center; }
.amount { font-size: 34rpx; font-weight: 700; color: #07c160; }
.tabs { display: flex; margin: 16rpx 0; }
.tab { flex: 1; text-align: center; padding: 16rpx; background: #f5f5f5; }
.tab.active { background: #fff; border: 1px solid #eee; border-bottom-color: transparent; }
.list {}
.voucher { display: flex; background: #fff; border-radius: 12rpx; margin-bottom: 16rpx; overflow: hidden; box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.05); }
.voucher .left { width: 200rpx; background: #e8f7ec; display: flex; align-items: center; justify-content: center; }
.voucher.expired .left { background: #f0f0f0; }
.money { font-size: 34rpx; font-weight: 700; color: #07c160; }
.voucher.expired .money { color: #999; }
.right { flex: 1; padding: 16rpx; }
.title { font-size: 28rpx; font-weight: 600; }
.desc { color: #666; margin-top: 6rpx; }
.empty { text-align: center; color: #999; padding: 40rpx 0; }