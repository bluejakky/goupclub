<view class="page">
  <view class="section">
    <view class="section-title">注册基本信息（可修改）</view>
    <view class="row">
      <text class="label">性别</text>
      <radio-group class="radio-group" bindchange="onGenderChange">
        <label class="radio-item">
          <radio value="男" checked="{{form.gender === '男'}}" />男
        </label>
        <label class="radio-item">
          <radio value="女" checked="{{form.gender === '女'}}" />女
        </label>
      </radio-group>
    </view>
    <view class="row">
      <text class="label">语言</text>
      <input class="input" placeholder="例如：中文、英文" value="{{form.language}}" bindinput="onInput" data-field="language" />
    </view>
    <view class="row">
      <text class="label">职业</text>
      <input class="input" placeholder="你的职业" value="{{form.occupation}}" bindinput="onInput" data-field="occupation" />
    </view>
    <view class="row">
      <text class="label">城市</text>
      <input class="input" placeholder="常驻城市" value="{{form.city}}" bindinput="onInput" data-field="city" />
    </view>
    <view class="row">
      <text class="label">喜欢类型</text>
      <input class="input" placeholder="徒步/露营/路跑..." value="{{form.favorite}}" bindinput="onInput" data-field="favorite" />
    </view>
  </view>

  <view class="footer">
    <button class="primary" bindtap="onSave">保存修改</button>
  </view>
</view>