<view class="page">
  <view class="form">
    <view class="row">
      <text class="label">当前密码</text>
      <input class="input" password="{{!showCurrent}}" value="{{current}}" bindinput="onInput" data-field="current" />
      <button class="mini" size="mini" bindtap="toggle" data-target="showCurrent">{{showCurrent?'隐藏':'显示'}}</button>
    </view>
    <view class="row">
      <text class="label">新密码</text>
      <input class="input" password="{{!showNew}}" value="{{next}}" bindinput="onInput" data-field="next" placeholder="8-20位，字母与数字组合" />
      <button class="mini" size="mini" bindtap="toggle" data-target="showNew">{{showNew?'隐藏':'显示'}}</button>
    </view>
    <view class="row">
      <text class="label">确认新密码</text>
      <input class="input" password="{{!showConfirm}}" value="{{confirm}}" bindinput="onInput" data-field="confirm" />
      <button class="mini" size="mini" bindtap="toggle" data-target="showConfirm">{{showConfirm?'隐藏':'显示'}}</button>
    </view>
  </view>

  <view class="footer">
    <button class="primary" bindtap="onSubmit">确认修改</button>
  </view>
</view>
