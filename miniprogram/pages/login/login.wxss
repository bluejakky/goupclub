/* 页面基础 */
.page { padding: 0 24rpx; }
.login-page .hero { width: 100%; height: 280rpx; }
.card { margin-top: -60rpx; background: #fff; border-radius: 16rpx; box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.06); padding: 24rpx; }

/* 设计画布与切片 */
.design-canvas { position: relative; margin: 0 auto; overflow: hidden; }
.slice { position: absolute; pointer-events: none; }

/* 表单与控件（保留原样） */
.form {}
.field { display: flex; align-items: center; gap: 12rpx; margin-bottom: 16rpx; background: #f8fafc; border: 1rpx solid #e5e7eb; border-radius: 12rpx; padding: 12rpx; }
.icon { width: 36rpx; height: 36rpx; opacity: 0.9; }
.input { flex: 1; background: transparent; border: none; padding: 8rpx 0; }
.input::placeholder { color: #9ca3af; }
.toggle { display: flex; align-items: center; gap: 6rpx; padding: 6rpx 8rpx; border-radius: 8rpx; }
.toggle-icon { width: 28rpx; height: 28rpx; opacity: 0.8; }
.toggle-text { color: #0f172a; font-size: 24rpx; }

/* 底部固定操作区 */
.footer { position: fixed; left: 0; right: 0; bottom: 0; padding: 16rpx 24rpx; background: #fff; box-shadow: 0 -6rpx 20rpx rgba(0,0,0,0.06); }
.primary { background: #07c160; color: #fff; border-radius: 12rpx; }
.outline { background: #fff; border: 1rpx solid #e5e7eb; color: #0f172a; border-radius: 12rpx; margin-left: 12rpx; }

/* 调试辅助 */
.design-canvas.debug .slice { outline: 1px dashed rgba(0, 128, 255, 0.4); }
.design-canvas.debug .btn, .design-canvas.debug .agree-box { outline: 1px dashed rgba(255, 0, 0, 0.5); }

/* 绝对定位输入层与按钮 */
.abs-input { position: absolute; z-index: 12; background: transparent; border: none; padding: 6px 10px; font-size: 14px; color: #111; }
.abs-rect { position: absolute; z-index: 8; background: #fff; border-radius: 12px; border: 1px solid #e5e7eb; opacity: 0.92; }
.btn { position: absolute; z-index: 10; }
.agree-box { position: absolute; z-index: 11; border: 1px solid #aaa; border-radius: 4px; }
.agree-inner { width: 100%; height: 100%; background: transparent; }
.agree-inner.on { background: #07c160; }

/* 顶部自定义导航：单行三列（左：返回 中：登录 右：占位） */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  display: grid;
  grid-template-columns: 1fr auto 1fr;
  align-items: center;
  height: 80rpx;
  background: transparent;
}

/* 将左侧返回改成按钮样式 */
.nav-left {
  grid-column: 1;
  justify-self: start;
  margin-left: 24rpx;
  display: flex;
  align-items: center;
  height: 56rpx;
  padding: 0 16rpx;
  background: rgba(255, 255, 255, 0.96);
  border: 1rpx solid #e5e7eb;
  border-radius: 9999rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.06);
}
.nav-left:active { opacity: 0.88; }

.nav-title {
  grid-column: 2;
  justify-self: center;
  color: #111827;
  font-size: 28rpx;
  font-weight: 600;
  height: 80rpx;
  display: flex;
  align-items: center;
}
.back-text {
  color: #111827;
  font-size: 26rpx; /* 保持更小按钮的文字大小 */
  font-weight: 600;
  line-height: 56rpx; /* 与按钮高度一致，确保垂直居中 */
}

