/* 可点击按钮区域覆盖在切片上方 */
.btn { position: absolute; z-index: 10; }
.btn-login { }
.btn-register { }

/* slice_012 使用原比例切片进行横向平铺，避免拉伸失真 */
.slice-012-bg {
  background-image: url('/assets/login/slice_012.png');
  background-repeat: repeat-x;
  background-size: auto 100%;
}

