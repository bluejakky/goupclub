/* 热点调试模式样式：显示范围与标签 */
.hotspot.debug { background: rgba(0,128,255,0.15); border: 1rpx dashed #08f; }
.hotspot-label { position: absolute; left: 4rpx; top: 4rpx; font-size: 20rpx; color: #084; background: rgba(255,255,255,0.65); padding: 2rpx 6rpx; border-radius: 6rpx; }
.hotspot-debug-toggle { position: absolute; right: 8rpx; top: 8rpx; z-index: 3; background: rgba(17,24,39,0.85); color: #fff; font-size: 24rpx; padding: 8rpx 12rpx; border-radius: 10rpx; }
.hotspot-debug-copy { position: absolute; right: 8rpx; top: 64rpx; z-index: 3; background: rgba(8,120,44,0.95); color: #fff; font-size: 24rpx; padding: 8rpx 12rpx; border-radius: 10rpx; }

/* 新增：热点缩放手柄样式（调试模式显示） */
.hotspot-resize {
  position: absolute;
  right: 4rpx;
  bottom: 4rpx;
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  background: rgba(8,120,44,0.9);
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.18);
  z-index: 4;
}
.hotspot-resize:active { opacity: 0.9; }