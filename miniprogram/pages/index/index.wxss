.page { display: flex; flex-direction: column; min-height: 100vh; background: #fff; }
.topbar { display: flex; align-items: center; justify-content: space-between; gap: 16rpx; padding: 16rpx 24rpx 0rpx; border-bottom: 0; }
.search-input { flex: 1; background: #f9fafb; border: 1rpx solid #e5e7eb; border-radius: 12rpx; padding: 12rpx 16rpx; font-size: 24rpx; color: #111827; }
.needwork { width: 200rpx; height: 200rpx; opacity: 0.95; }
.main { flex: 1; }
.main-image { width: 100%; height: auto; display: block; margin-top: -4rpx; margin-bottom: 72rpx; }
.results { padding: 8rpx 24rpx 24rpx; max-height: 50vh; }
.result-item { display: flex; gap: 12rpx; padding: 12rpx 0; border-bottom: 1rpx solid #f3f4f6; }
.result-thumb { width: 200rpx; height: 120rpx; border-radius: 8rpx; background: #f3f4f6; }
.result-info { flex: 1; display: flex; flex-direction: column; justify-content: center; }
.result-title { font-size: 28rpx; color: #111827; font-weight: 500; }
.result-meta { font-size: 24rpx; color: #6b7280; margin-top: 6rpx; }
.empty { padding: 12rpx 24rpx; color: #6b7280; font-size: 24rpx; }

/* 底部自定义导航（来玩/我的） */
.bottom-tab { position: fixed; left: 0; right: 0; bottom: 0; height: 100rpx; padding-bottom: env(safe-area-inset-bottom); background: #fff; border-top: 1rpx solid #e5e7eb; display: flex; z-index: 99; }
.tab-item { flex: 1; display: flex; flex-direction: column; align-items: center; justify-content: center; gap: 8rpx; }
.tab-icon { width: 48rpx; height: 48rpx; }
.tab-label { font-size: 24rpx; color: #374151; }
 .with-footer { padding-bottom: calc(100rpx + env(safe-area-inset-bottom)); }
 
 /* 快捷入口图片样式 */
 .quick-grid { display: flex; flex-wrap: wrap; gap: 16rpx; padding: 0 24rpx 24rpx; }
 .quick-item { width: 140rpx; height: 140rpx; border-radius: 12rpx; background: #fff; box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.06); }
 .quick-item:active { opacity: 0.85; }

/* 主图热点容器与点击区域 */
.main-image-wrap { position: relative; }
.hotspot { position: absolute; z-index: 2; /* 默认透明，可临时改为有色查看范围 */ background: rgba(255,255,255,0); }
/* 语言热点：根据用户提供的精准百分比 */
.hs-nihao { left: 21.31%; top: 13.61%; width: 22%; height: 8%; }
.hs-hello { left: 57.98%; top: 1.45%; width: 22%; height: 8%; }
.hs-other { left: 2.89%; top: 0.7%; width: 22%; height: 8%; }
 .hs-other1 { left: 76.35%; top: 10.21%; width: 22%; height: 8%; }
 .hs-other2 { left: 25.49%; top: 0.77%; width: 22%; height: 8%; }
/* 分类热点：汉语/英语/小语种/主题/志愿 */
.hs-cat-cn { left: 4.32%; top: 45.42%; width: 22%; height: 8%; }
.hs-cat-en { left: 53.36%; top: 46.18%; width: 22%; height: 8%; }
.hs-cat-minor { left: 52.3%; top: 59.95%; width: 22%; height: 8%; }
.hs-cat-theme { left: 5.65%; top: 73.67%; width: 26%; height: 10%; }
.hs-cat-volunteer { left: 6.26%; top: 87.95%; width: 26%; height: 10%; }

/* 热点调试模式样式：显示范围与标签 */
.hotspot.debug { background: rgba(0,128,255,0.15); border: 1rpx dashed #08f; }
.hotspot-label { position: absolute; left: 4rpx; top: 4rpx; font-size: 20rpx; color: #084; background: rgba(255,255,255,0.65); padding: 2rpx 6rpx; border-radius: 6rpx; }
.hotspot-debug-toggle { position: absolute; right: 8rpx; top: 8rpx; z-index: 3; background: rgba(17,24,39,0.85); color: #fff; font-size: 24rpx; padding: 8rpx 12rpx; border-radius: 10rpx; }
 .hotspot-debug-toggle:active { opacity: 0.9; }
 .hotspot-debug-copy { position: absolute; right: 8rpx; top: 64rpx; z-index: 3; background: rgba(8,120,44,0.95); color: #fff; font-size: 24rpx; padding: 8rpx 12rpx; border-radius: 10rpx; }
 .hotspot-debug-copy:active { opacity: 0.92; }