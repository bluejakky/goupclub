<view class="page with-footer">
  <view class="topbar">
    <input class="search-input" type="text" placeholder="" confirm-type="search" bindinput="onSearchInput" bindconfirm="onSearchConfirm" />
    <image class="needwork" src="../../assets/needwork.png" mode="aspectFit" bindtap="onNeedworkTap" />
  </view>
  <view class="main">
    <view class="main-image-wrap">
      <image class="main-image" src="../../assets/mainpage.PNG" mode="widthFix" />
      <!-- 语言快捷热点：你好/hello/其他语言 -->
      <view class="hotspot hs-nihao" bindtap="onLangTap" data-key="nihao"></view>
      <view class="hotspot hs-hello" bindtap="onLangTap" data-key="hello"></view>
      <view class="hotspot hs-other" bindtap="onLangTap" data-key="other"></view>
      <!-- 分类热点：汉语/英语/小语种/主题/志愿 -->
      <view class="hotspot hs-cat-cn" bindtap="onCategoryTap" data-cat="汉语"></view>
      <view class="hotspot hs-cat-en" bindtap="onCategoryTap" data-cat="英语"></view>
      <view class="hotspot hs-cat-minor" bindtap="onCategoryTap" data-cat="小语种"></view>
      <view class="hotspot hs-cat-theme" bindtap="onCategoryTap" data-cat="主题"></view>
      <view class="hotspot hs-cat-volunteer" bindtap="onCategoryTap" data-cat="志愿"></view>
    </view>
  </view>

  <!-- 搜索结果区域已移除：搜索后直接跳转到活动详情页面 -->
  <view class="bottom-tab">
    <view class="tab-item" bindtap="goWork" data-key="work">
      <image class="tab-icon" src="../../assets/tab_play_48.png" mode="aspectFit" />
      <text class="tab-label">来玩</text>
    </view>
    <view class="tab-item" bindtap="goMine" data-key="mine">
      <image class="tab-icon" src="../../assets/tab_mine_48.png" mode="aspectFit" />
      <text class="tab-label">我的</text>
    </view>
  </view>
</view>
