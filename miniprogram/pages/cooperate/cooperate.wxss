.page { display:flex; flex-direction:column; min-height:100vh; background:#fff; }
.tip { padding:16rpx 24rpx; color:#6b7280; font-size:24rpx; }
.form { padding: 8rpx 24rpx 24rpx; flex:1; }
.row { display:flex; align-items:center; gap:16rpx; margin:12rpx 0; }
.label { width: 160rpx; color:#374151; font-size:26rpx; }
.input { flex:1; border:1rpx solid #e5e7eb; border-radius:12rpx; padding:12rpx 16rpx; font-size:26rpx; background:#f9fafb; }
.textarea { flex:1; min-height: 180rpx; border:1rpx solid #e5e7eb; border-radius:12rpx; padding:12rpx 16rpx; font-size:26rpx; background:#f9fafb; }
.footer { padding: 12rpx 24rpx calc(24rpx + env(safe-area-inset-bottom)); border-top: 1rpx solid #f3f4f6; }
.banner { width: 100%; }
.primary { background:#7C3AED; color:#fff; border-radius:12rpx; padding: 16rpx 0; font-size:28rpx; }