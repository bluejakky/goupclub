# Example environment variables for GoUp server
# Copy this file to `.env` and fill with real values on your server.

# Database
DB_HOST=your_db_host
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=goup

# Server
PORT=3000
SERVER_BASE_URL=https://www.goupclub.com
CORS_ORIGIN=https://www.goupclub.com

# Optional: admin auth (set in real .env, do NOT commit secrets)
# ADMIN_JWT_SECRET=change_me

# Optional: Payments (placeholders, set only if you use payments)
# WECHAT_APP_ID=your_wechat_app_id
# WECHAT_APP_SECRET=your_wechat_app_secret
# WECHAT_MCH_ID=your_wechat_merchant_id
# WECHAT_KEY=wechat_sandbox_key
# WECHAT_API_V3_KEY=your_api_v3_key
# WECHAT_SERIAL_NO=your_cert_serial_no
# WECHAT_PRIVATE_KEY_PEM=/absolute/path/to/apiclient_key.pem
# WECHAT_PLATFORM_PUBLIC_KEY_PEM=/absolute/path/to/wechatpay_platform_public.pem
# WECHAT_NOTIFY_URL=https://your.domain/pay/wechat/notify
# ALIPAY_APP_ID=your_alipay_app_id
# ALIPAY_PUBLIC_KEY=alipay_public_key_placeholder
# ALIPAY_PRIVATE_KEY=alipay_private_key_placeholder
# ALIPAY_KEY=alipay_sandbox_key
# ALIPAY_GATEWAY=https://openapi-sandbox.dl.alipaydev.com/gateway.do
# ALIPAY_NOTIFY_URL=https://your.domain/pay/alipay/notify
# ALIPAY_RETURN_URL=https://your.domain/pay/alipay/return